@model GRis.ViewModels.Account.AcctiveAccountModel

@{
    ViewBag.Title = "Reactivate user account";
}

@using (Html.BeginForm("AcctiveAccount", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Enter user name</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Code);
    <div class="form-group">
        <label class="col-md-2 control-label">User name</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Reactivate user account" />
        </div>
    </div>
}