@model DateTime?

@{
    var fieldName = ViewData.TemplateInfo.HtmlFieldPrefix;
    if (ViewData.ContainsKey("fieldName"))
    {
        fieldName = ViewData["fieldName"].ToString();
    }

    var initialValue = Model.HasValue ? Model.Value.ToString("MM/yyyy") : "";
}

<div class="input-group date">
    @Html.TextBoxFor(model => model, new { @class = "form-control monthyear-datepicker", Name = fieldName, @Value = @initialValue, @readonly = "readonly" })
    <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
</div>