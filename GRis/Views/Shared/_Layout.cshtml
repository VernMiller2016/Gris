<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - GRis</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Gris", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @if (User.IsInRole("Admin") || User.IsInRole("Clerk"))
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Programs", "Index", "Programs")</li>
                        <li>@Html.ActionLink("Pay Sources", "Index", "PaySources")</li>
                        <li>@Html.ActionLink("Servers", "Index", "Servers")</li>
                        <li>@Html.ActionLink("Time Entries", "Index", "ServerTimeEntries")</li>
                        <li>
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Reports<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Service Details Monthly", "ServerTimeEntriesMonthlyReport", "Reports")</li>
                                <li>@Html.ActionLink("Staff Percentages", "StaffPercentagesMonthlyReport", "Reports")</li>
                                <li>@Html.ActionLink("Category Percentages", "CategoryPercentagesMonthlyReport", "Reports")</li>
                                <li>@Html.ActionLink("Server Salaries Report", "ServerSalariesMonthlyReport", "Reports")</li>
                            </ul>
                        </li>
                        <li>
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Configurations<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Available Hours", "Index", "ServerAvailableHours")</li>
                                <li>@Html.ActionLink("Elements", "Index", "Elements")</li>
                            </ul>
                        </li>                        
                        @if (User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("Users", "Index", "UserAdmin")</li>
                        }
                    </ul>
                }
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @{ Html.RenderPartial("_Alerts"); }
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - GRis</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
