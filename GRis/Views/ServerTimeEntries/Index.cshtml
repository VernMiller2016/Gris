@using GRis.ViewModels.ServerTimeEntry
@model ServerTimeEntryListViewModel

@{
    ViewBag.Title = "Index";
    var results = Model.TimeEntries;
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Upload excel sheet", "Upload")
</p>

<div>
    @using (Html.BeginForm("Index", "ServerTimeEntries", FormMethod.Get))
    {
        <div class="form-horizontal">
            <hr />

            <div class="form-group">
                @Html.LabelFor(model => model.Filters.SelectedDate, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Filters.SelectedDate)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Filter" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TimeEntries.First().ServerId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimeEntries.First().PaySourceId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimeEntries.First().Duration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimeEntries.First().BeginDate)
        </th>
        @*<th></th>*@
    </tr>

    @if (results.Any())
    {
        foreach (var item in results)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Server.VendorId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaySource.VendorId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Duration)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BeginDate)
                </td>
                @*<td>
                        @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                    </td>*@
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="5">
                <h4>
                    <span class="label label-info">No data match the search criteria!</span>
                </h4>
            </td>
        </tr>
    }
</table>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/plugins")
    @Scripts.Render("~/bundles/app")
}